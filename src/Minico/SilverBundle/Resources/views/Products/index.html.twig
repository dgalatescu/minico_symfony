{% extends 'MinicoSilverBundle::base.html.twig' %}

{% block body -%}
    <h1>Products list</h1>

    <ul>
        <li>
            <a href="{{ path('products_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </li>
    </ul>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Productcode</th>
                <th>Productdescription</th>
                <th>Category</th>
                <th>Entry price</th>
                <th>Sale price</th>
                <th>Supplier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('products_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.productCode }}</td>
                <td>{{ entity.productDescription }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.entryPrice }}</td>
                <td>{{ entity.salePrice  }}</td>
                <td>{{ entity.supplier }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('products_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('products_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
