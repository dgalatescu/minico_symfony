{% extends 'MinicoSilverBundle::base.html.twig' %}

{% block body -%}
    <h1>Entries list</h1>

    <ul>
        <li>
            <a href="{{ path('entries_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product code</th>
                <th>Product name</th>
                <th>Quantity</th>
                <th>Storage</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entries_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.getProductId }}</a></td>
                <td>{{ entity.getProductId.getProductDescription }}</a></td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.storage }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('entries_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('entries_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entries_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
