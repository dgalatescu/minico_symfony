{% extends 'MinicoSilverBundle::base.html.twig' %}

{% block body -%}
    <h1>Storage list</h1>

    <ul>
        <li>
            <a href="{{ path('storage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Sellingstorage</th>
                <th>Mainstorage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('storage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.sellingStorage }}</td>
                <td>{{ entity.mainStorage }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('storage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('storage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('storage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
