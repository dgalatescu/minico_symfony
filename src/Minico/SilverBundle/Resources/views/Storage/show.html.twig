{% extends 'MinicoSilverBundle::base.html.twig' %}

{% block body -%}
    <h1>Storage</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Sellingstorage</th>
                <td>{{ entity.sellingStorage }}</td>
            </tr>
            <tr>
                <th>Mainstorage</th>
                <td>{{ entity.mainStorage }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('storage') }}">
            Back to the list
        </a>
    </li>
    <br/>
    <li>
        <a href="{{ path('storage_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
